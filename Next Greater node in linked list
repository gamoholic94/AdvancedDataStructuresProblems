class Solution:
    def nextLargerNodes(self, head):
        values = []
        while head:
            values.append(head.val)
            head = head.next

        result = [0] * len(values)
        stack = []

        for i, val in enumerate(values):
            while stack and values[stack[-1]] < val:
                idx = stack.pop()
                result[idx] = val
            stack.append(i)

        return result
